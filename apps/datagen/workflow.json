{
    "workflows": [
        {
            "name": "data gen",
            "steps": [
                {
                    "debug" : false,
                    "stepId" : "generator",
                    "trigger" : {
                        "timer" : {
                            "delay" : 1000,
                            "period" : 500
                        }
                    },
                    "urlGenerator" : {
                        "script" : "context.setUrl(\"outputHost\", \"/collect\");"
                    },
                    "payloadGenerator": {
                        "resource" : "/apps/datagen/generate.js"
                    },
                    "resultsProcessor" : {
                        "script" : "context.sendMetric(\"datagen\", 1.0);"
                    }
                }
            ]
        }
    ]
}
