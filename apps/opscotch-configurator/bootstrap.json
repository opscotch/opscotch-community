[
    {
        "enabled": true,
        "deploymentId": "opscotch-configurator",
        "remoteConfiguration": "${OPSCOTCH_CONFIGURATOR_HOME}/workflow.json",
        "errorHandling": {
            "enableLocalLogging": true
        },
        "workflow": {
            "errorHandling": {
                "enableLocalLogging": true
            }
        },
        "allowHttpServerAccess": [
            {
                "id": "api",
                "port": 11000
            },
            {
                "id": "app-static",
                "port": 11001,
                "servePackagedAsset" : "app-static-zip"
            }
        ],
        "allowFileAccess": [
            {
                "id" : "app-static-zip",
                "directoryOrFile" : "${OPSCOTCH_CONFIGURATOR_HOME}/opscotchui.zip",
                "READ" : true
            },
            {
                "id": "opscotch-configs",
                "directoryOrFile": "${OPSCOTCH_CONFIGURATOR_HOME}/",
                "READ": true,
                "LIST": true,
                "WRITE": true,
                "DELETE" : true
            },
            {
                "id": "opscotch-resources",
                "directoryOrFile": "${OPSCOTCH_RESOURCES}/",
                "READ": true,
                "LIST": true,
                "WRITE": true,
                "DELETE" : true
            }
        ]
    }
]