[
    {
        "enabled": true,
        "agentPrivateKey": "",
        "deploymentId": "opscotch-diagnostic",
        "remoteConfiguration": "workflow.json",
        "errorHandling": {
            "enableLocalLogging": true
        },
        "workflow": {
            "errorHandling": {
                "enableLocalLogging": true
            }
        },
        "allowHttpServerAccess": [
            {
                "id": "api",
                "port": 11000
            }
        ],
        "allowFileAccess": [
            {
                "id": "diagnostics",
                "directoryOrFile": "${OPSCOTCH_DIAGNOSTICS_DATA}",
                "READ": true,
                "LIST": true,
                "WRITE": true,
                "DELETE" : false
            }
        ],
        "allowExternalHostAccess": [
            {
                "id" : "forwarder",
                "host": "http://localhost:12001/_metrics"
            }
        ],
        "data" : {
            "xforwardingHost" : "forwarder"
        }
    }
]